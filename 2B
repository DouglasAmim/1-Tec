2º Atividade 2B 

Questão 1:

#include <stdio.h>
int main(){
    float base,altura,area;
    printf("Digite a Base\n");
    scanf("%f", &base);
    printf("Digite a Altura\n");
    scanf("%f", &altura);
    area=(base*altura)/2;
    printf("A Area e %.2f\n", area);
    return 0;
}

Questão 2:

#include <stdio.h>
int main(){
    float vf,imp,rev,total;
    printf("Digite o Preco de Fabrica\n");
    scanf("%f", &vf);
    imp=vf*0.45;
    rev=vf*0.28;
    total=imp+rev+vf;
    printf("O Preco Total: %.2f\n", total);
    return 0;
}

Questão 3:

#include <stdio.h>
int main (){
    int cavalo,haras;
    printf("Digite a Quantidade de Cavalos\n");
    scanf("%d", &cavalo);
    haras=cavalo*4;
    printf("A Quantidade de Ferraduras Necessarias: %d\n", haras);
    return 0;
}

Questão 4:

#include <stdio.h>
int main(){
    float soma,pao,sal,total,soma1;
    printf("Digite a Quantidade de Salgados\n");
    scanf("%f", &sal);
    printf("Digite a Quantidade de Paos\n");
    scanf("%f", &pao);
    soma=sal*1.50;
    soma1=pao*0.25;
    total=soma+soma1;
    printf("O Preco Total:  %.2f\n", total);
    return 0;
}

Questão 5:

#include <stdio.h>
int main(){
    int idade,soma;
    printf("Digite a sua Idade\n");
    scanf("%d", &idade);
    soma=idade*365;
    printf("Voce Ja Viveu %d Dias\n", soma);
    return 0;
}
