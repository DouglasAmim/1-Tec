1º Atividade 2B

Questão 1:

#include <stdio.h>
int main(){
    int idade;
    float altura,peso;
    printf("Digite sua Idade\n");
    scanf("%d", &idade);
    printf("Digite a sua Altura\n");
    scanf("%f", &altura);
    printf("Digite o seu Peso\n");
    scanf("%f", &peso);
    printf("sua idade e %d\n",idade);
    printf("sua altura e %.1f\n", altura);
    printf("seu peso e %.2f\n", peso);
    return 0;
}

Questão 2:

#include <stdio.h>
int main (){
    int num1,num2;
    int soma,sub,mult;
    float div;
    printf("Digite o Primeiro Numero\n");
    scanf("%d", &num1);
    printf("Digite o Segundo Numero\n");
    scanf("%d", &num2);
    soma=num1+num2;
    div=num1/num2;
    sub=num1-num2;
    mult=num1*num2;
    printf("Soma: %d\n",soma);
    printf("Subtracao: %d\n", sub);
    printf("Divisao: %.2f\n", div);
    printf("Multiplicacao: %d\n", mult);
    
    return 0:
}

