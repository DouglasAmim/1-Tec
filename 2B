Questão 5:

#include <stdio.h>
int main (){
    int c;
    float k,f;
    printf("Digite o Grau em Celsius\n");
    scanf("%d", &c);
    k=c+273.15;
    f=1.8*c+32;
    printf(" Kelvin %.2f\n",k);
    printf(" Fahrenheit %.2f\n",f);
    return 0;
}



